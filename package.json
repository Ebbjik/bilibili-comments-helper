{
  "name": "bilibil-comments-helper",
  "displayName": "B站评论助手",
  "version": "0.0.1",
  "description": "Bilibili评论助手，帮你下载评论，分析提取评论关键字，分析热点趋势～",
  "author": "joey",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "test": "plasmo test"
  },
  "dependencies": {
    "plasmo": "0.84.0",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@types/chrome": "0.0.251",
    "@types/node": "20.9.0",
    "@types/react": "18.2.37",
    "@types/react-dom": "18.2.15",
    "prettier": "3.0.3",
    "typescript": "5.2.2"
  },
  "manifest": {
    "host_permissions": [
      "https://www.bilibili.com/*",
      "https://bilibili.com/*"
    ],
    "web_accessible_resources": [
      {
        "resources": [
          "~injected.js"
        ],
        "matches": [
          "https://www.bilibili.com/*"
        ]
      }
    ]
  }
}
